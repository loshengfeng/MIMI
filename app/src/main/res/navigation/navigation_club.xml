<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_club"
    app:startDestination="@id/clubTabFragment">

    <include app:graph="@navigation/navigation_login" />
    <include app:graph="@navigation/navigation_club_topic" />
    <include app:graph="@navigation/navigation_my_post" />

    <fragment
        android:id="@+id/clubTabFragment"
        android:name="com.dabenxiang.mimi.view.club.ClubTabFragment"
        tools:layout="@layout/fragment_tab_club">
        <action
            android:id="@+id/action_clubTabFragment_to_clubTextDetailFragment"
            app:destination="@id/clubTextDetailFragment" />
        <action
            android:id="@+id/action_clubTabFragment_to_clubPicDetailFragment"
            app:destination="@id/clubPicDetailFragment" />
        <action
            android:id="@+id/action_clubTabFragment_to_topicDetailFragment"
            app:destination="@id/navigation_club_topic" />
        <action
            android:id="@+id/action_clubTabFragment_to_myPostFragment"
            app:destination="@id/navigation_my_post" />
        <action
            android:id="@+id/action_clubTabFragment_to_searchPostFragment"
            app:destination="@id/searchPostFragment" />
        <action
            android:id="@+id/action_to_loginFragment"
            app:destination="@id/navigation_login" />
    </fragment>

    <fragment
        android:id="@+id/clubTextDetailFragment"
        android:name="com.dabenxiang.mimi.view.club.post.ClubTextFragment"
        tools:layout="@layout/fragment_club_text">
        <action
            android:id="@+id/action_clubTextDetailFragment_to_myPostFragment"
            app:destination="@id/navigation_my_post" />
        <action
            android:id="@+id/action_clubTextDetailFragment_to_searchPostFragment"
            app:destination="@id/searchPostFragment" />
    </fragment>

    <fragment
        android:id="@+id/clubPicDetailFragment"
        android:name="com.dabenxiang.mimi.view.club.post.ClubPicDetailFragment"
        tools:layout="@layout/fragment_club_pic_detail" />
        <action
            android:id="@+id/action_clubPicDetailFragment_to_myPostFragment"
            app:destination="@id/navigation_my_post" />

    <fragment
        android:id="@+id/searchPostFragment"
        android:name="com.dabenxiang.mimi.view.search.post.SearchPostFragment"
        tools:layout="@layout/fragment_search_post" />
</navigation>