<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_personal"
    app:startDestination="@id/personalFragment">

    <include app:graph="@navigation/navigation_login" />
    <include app:graph="@navigation/navigation_club_topic" />
    <include app:graph="@navigation/navigation_my_post" />
    <include app:graph="@navigation/navigation_setting" />

    <fragment
        android:id="@+id/personalFragment"
        android:name="com.dabenxiang.mimi.view.personal.PersonalFragment"
        tools:layout="@layout/fragment_personal">

        <action
            android:id="@+id/action_personalFragment_to_loginFragment"
            app:destination="@id/navigation_login" />

        <action
            android:id="@+id/action_personalFragment_to_myFollowFragment"
            app:destination="@id/myFollowFragment" />

        <action
            android:id="@+id/action_personalFragment_to_orderFragment"
            app:destination="@id/orderFragment" />

        <action
            android:id="@+id/action_personalFragment_to_chatHistoryFragment"
            app:destination="@id/chatHistoryFragment" />

        <action
            android:id="@+id/action_personalFragment_to_myPostFragment"
            app:destination="@id/navigation_my_post" />
        <action
            android:id="@+id/action_to_settingFragment"
            app:destination="@id/navigation_setting" />
    </fragment>

    <fragment
        android:id="@+id/myFollowFragment"
        android:name="com.dabenxiang.mimi.view.myfollow.MyFollowFragment"
        tools:layout="@layout/fragment_my_follow">

        <action
            android:id="@+id/action_myFollowFragment_to_topicDetailFragment"
            app:destination="@id/navigation_club_topic" />
        <action
            android:id="@+id/action_myFollowFragment_to_navigation_my_post"
            app:destination="@id/navigation_my_post" />
    </fragment>

    <fragment
        android:id="@+id/orderFragment"
        android:name="com.dabenxiang.mimi.view.order.OrderFragment"
        tools:layout="@layout/fragment_order">
        <action
            android:id="@+id/action_orderFragment_to_chatContentFragment"
            app:destination="@id/chatContentFragment" />
        <action
            android:id="@+id/action_orderFragment_to_paymentInfoFragment"
            app:destination="@id/paymentInfoFragment" />
    </fragment>

    <fragment
        android:id="@+id/chatHistoryFragment"
        android:name="com.dabenxiang.mimi.view.chathistory.ChatHistoryFragment"
        tools:layout="@layout/fragment_chat_history">
        <action
            android:id="@+id/action_chatHistoryFragment_to_chatContentFragment"
            app:destination="@id/chatHistoryFragment" />
    </fragment>

    <fragment
        android:id="@+id/chatContentFragment"
        android:name="com.dabenxiang.mimi.view.chatcontent.ChatContentFragment"
        android:label="ChatContentFragment" />

    <fragment
        android:id="@+id/paymentInfoFragment"
        android:name="com.dabenxiang.mimi.view.paymentInfo.PaymentInfoFragment"
        android:label="PaymentInfoFragment" />

</navigation>