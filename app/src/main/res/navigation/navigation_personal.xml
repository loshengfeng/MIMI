<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_personal"
    app:startDestination="@id/personalFragment">

    <include app:graph="@navigation/navigation_login" />
    <include app:graph="@navigation/navigation_detail_club" />

    <fragment
        android:id="@+id/personalFragment"
        android:name="com.dabenxiang.mimi.view.personal.PersonalFragment"
        tools:layout="@layout/fragment_personal">

        <action
            android:id="@+id/action_personalFragment_to_loginFragment"
            app:destination="@id/navigation_login" />

        <action
            android:id="@+id/action_personalFragment_to_myFollowFragment"
            app:destination="@id/myFollowFragment" />

        <action
            android:id="@+id/action_personalFragment_to_orderFragment"
            app:destination="@id/orderFragment" />

        <action
            android:id="@+id/action_personalFragment_to_chatHistoryFragment"
            app:destination="@id/chatHistoryFragment" />

        <action
            android:id="@+id/action_personalFragment_to_settingFragment"
            app:destination="@id/settingFragment" />
        <action
            android:id="@+id/action_personalFragment_to_myPostFragment"
            app:destination="@id/myPostFragment" />

    </fragment>

    <fragment
        android:id="@+id/settingFragment"
        android:name="com.dabenxiang.mimi.view.setting.SettingFragment"
        tools:layout="@layout/fragment_setting">

        <action
            android:id="@+id/action_settingFragment_to_updateProfileFragment"
            app:destination="@id/updateProfileFragment" />

        <action
            android:id="@+id/action_settingFragment_to_changePasswordFragment"
            app:destination="@id/changePasswordFragment" />

    </fragment>

    <fragment
        android:id="@+id/updateProfileFragment"
        android:name="com.dabenxiang.mimi.view.updateprofile.UpdateProfileFragment"
        tools:layout="@layout/fragment_update_profile">

    </fragment>

    <fragment
        android:id="@+id/myFollowFragment"
        android:name="com.dabenxiang.mimi.view.myfollow.MyFollowFragment"
        tools:layout="@layout/fragment_my_follow">

        <action
            android:id="@+id/action_myFollowFragment_to_clubDetailFragment"
            app:destination="@id/navigation_detail_club"/>
    </fragment>

    <fragment
        android:id="@+id/orderFragment"
        android:name="com.dabenxiang.mimi.view.order.OrderFragment"
        tools:layout="@layout/fragment_order"/>

    <fragment
        android:id="@+id/chatHistoryFragment"
        android:name="com.dabenxiang.mimi.view.chathistory.ChatHistoryFragment"
        tools:layout="@layout/fragment_chat_history" >
        <action
            android:id="@+id/action_chatHistoryFragment_to_chatContentFragment"
            app:destination="@id/chatContentFragment" />
    </fragment>

    <fragment
        android:id="@+id/messengerFragment"
        android:name="com.dabenxiang.mimi.view.messenger.MessengerFragment"
        tools:layout="@layout/fragment_messenger" />

    <fragment
        android:id="@+id/changePasswordFragment"
        android:name="com.dabenxiang.mimi.view.changepassword.ChangePasswordFragment"
        tools:layout="@layout/fragment_change_password">

    </fragment>
    <fragment
        android:id="@+id/chatContentFragment"
        android:name="com.dabenxiang.mimi.view.chatcontent.ChatContentFragment"
        android:label="ChatContentFragment" />
    <fragment
        android:id="@+id/myPostFragment"
        android:name="com.dabenxiang.mimi.view.mypost.MyPostFragment"
        android:label="MyPostFragment"
        tools:layout="@layout/fragment_my_post"/>
</navigation>