<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_home"
    app:startDestination="@id/splashFragment">

    <include app:graph="@navigation/navigation_setting" />

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.dabenxiang.mimi.view.splash.SplashFragment"
        tools:layout="@layout/fragment_splash">

        <action
            android:id="@+id/action_splashFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.dabenxiang.mimi.view.home.HomeFragment"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_homeFragment_to_categoriesFragment"
            app:destination="@id/categoriesFragment" />

        <action
            android:id="@+id/action_homeFragment_to_searchVideoFragment"
            app:destination="@id/searchVideoFragment" />
        <action
            android:id="@+id/action_homeFragment_to_settingFragment"
            app:destination="@id/settingFragment" />
        <action
            android:id="@+id/action_main_to_settingFragment"
            app:destination="@id/navigation_setting"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="false"/>

    </fragment>

    <fragment
        android:id="@+id/categoriesFragment"
        android:name="com.dabenxiang.mimi.view.home.category.CategoriesFragment"
        tools:layout="@layout/fragment_categories">

        <action
            android:id="@+id/action_categoriesFragment_to_searchVideoFragment"
            app:destination="@id/searchVideoFragment" />

    </fragment>

    <fragment
        android:id="@+id/searchVideoFragment"
        android:name="com.dabenxiang.mimi.view.search.video.SearchVideoFragment"
        tools:layout="@layout/fragment_search_video" />

    <fragment
        android:id="@+id/rankingFragment"
        android:name="com.dabenxiang.mimi.view.ranking.RankingFragment"
        tools:layout="@layout/fragment_ranking" />

    <fragment
        android:id="@+id/settingFragment"
        android:name="com.dabenxiang.mimi.view.setting.SettingFragment"
        tools:layout="@layout/fragment_setting">

        <action
            android:id="@+id/action_settingFragment_to_updateProfileFragment"
            app:destination="@id/updateProfileFragment" />

        <action
            android:id="@+id/action_settingFragment_to_changePasswordFragment"
            app:destination="@id/changePasswordFragment" />

    </fragment>

    <fragment
        android:id="@+id/updateProfileFragment"
        android:name="com.dabenxiang.mimi.view.updateprofile.UpdateProfileFragment"
        tools:layout="@layout/fragment_update_profile"/>

    <fragment
        android:id="@+id/changePasswordFragment"
        android:name="com.dabenxiang.mimi.view.changepassword.ChangePasswordFragment"
        tools:layout="@layout/fragment_change_password"/>

</navigation>