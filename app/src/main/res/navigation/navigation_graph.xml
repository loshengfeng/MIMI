<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph.xml"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.dabenxiang.mimi.view.splash.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/fragment_splash"></fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.dabenxiang.mimi.view.login.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/topupFragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_loginFragment_to_forgetPasswordFragment"
            app:destination="@id/forgetPasswordFragment"/>

    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.dabenxiang.mimi.view.home.HomeFragment"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_bottom_nav_to_topupFragment"
            app:destination="@id/topupFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_bottom_nav_to_favoriteFragment"
            app:destination="@id/favoriteFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_bottom_nav_to_personalFragment"
            app:destination="@id/personalFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_homeFragment_to_topupFragment"
            app:destination="@id/topupFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_homeFragment_to_favoriteFragment"
            app:destination="@id/favoriteFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_homeFragment_to_personalFragment"
            app:destination="@id/personalFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_homeFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/topupFragment"
        android:name="com.dabenxiang.mimi.view.topup.TopupFragment"
        tools:layout="@layout/fragment_topup">

        <action
            android:id="@+id/action_bottom_nav_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/topupFragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_bottom_nav_to_favoriteFragment"
            app:destination="@id/favoriteFragment"
            app:popUpTo="@id/topupFragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_bottom_nav_to_personalFragment"
            app:destination="@id/personalFragment"
            app:popUpTo="@id/topupFragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_topupFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/topupFragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_topupFragment_to_favoriteFragment"
            app:destination="@id/favoriteFragment"
            app:popUpTo="@id/topupFragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_topupFragment_to_personalFragment"
            app:destination="@id/personalFragment"
            app:popUpTo="@id/topupFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.dabenxiang.mimi.view.favorite.FavoriteFragment"
        tools:layout="@layout/fragment_favorite">

        <action
            android:id="@+id/action_bottom_nav_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/favoriteFragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_bottom_nav_to_topupFragment"
            app:destination="@id/topupFragment"
            app:popUpTo="@id/favoriteFragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_bottom_nav_to_personalFragment"
            app:destination="@id/personalFragment"
            app:popUpTo="@id/favoriteFragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_favoriteFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/favoriteFragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_favoriteFragment_to_topupFragment"
            app:destination="@id/topupFragment"
            app:popUpTo="@id/favoriteFragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_favoriteFragment_to_personalFragment"
            app:destination="@id/personalFragment"
            app:popUpTo="@id/favoriteFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/personalFragment"
        android:name="com.dabenxiang.mimi.view.personal.PersonalFragment"
        tools:layout="@layout/fragment_personal">

        <action
            android:id="@+id/action_bottom_nav_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/personalFragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_bottom_nav_to_topupFragment"
            app:destination="@id/topupFragment"
            app:popUpTo="@id/personalFragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_bottom_nav_to_favoriteFragment"
            app:destination="@id/favoriteFragment"
            app:popUpTo="@id/personalFragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_personalFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/personalFragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_personalFragment_to_topupFragment"
            app:destination="@id/topupFragment"
            app:popUpTo="@id/personalFragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_personalFragment_to_favoriteFragment"
            app:destination="@id/favoriteFragment"
            app:popUpTo="@id/personalFragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_personalFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/personalFragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_personalFragment_to_settingFragment"
            app:destination="@id/settingFragment"/>

    </fragment>

    <fragment
        android:id="@+id/forgetPasswordFragment"
        android:name="com.dabenxiang.mimi.view.forgetpassword.ForgetPasswordFragment"
        tools:layout="@layout/fragment_forget_password">

        <!--<action
            android:id="@+id/action_forgetPasswordFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/forgetPasswordFragment"
            app:popUpToInclusive="true" />-->

    </fragment>

    <fragment
        android:id="@+id/settingFragment"
        android:name="com.dabenxiang.mimi.view.setting.SettingFragment"
        tools:layout="@layout/fragment_setting">

        <action
            android:id="@+id/action_settingFragment_to_resendMailFragment"
            app:destination="@id/resendMailFragment"/>

        <action
            android:id="@+id/action_settingFragment_to_changePasswordFragment"
            app:destination="@id/changePasswordFragment"/>

    </fragment>

    <fragment
        android:id="@+id/resendMailFragment"
        android:name="com.dabenxiang.mimi.view.resendmail.ResendMailFragment"
        tools:layout="@layout/fragment_resend_mail">

        <!--<action
            android:id="@+id/action_settingFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/settingFragment"
            app:popUpToInclusive="true" />-->

    </fragment>

    <fragment
        android:id="@+id/changePasswordFragment"
        android:name="com.dabenxiang.mimi.view.changepassword.ChangePasswordFragment"
        tools:layout="@layout/fragment_change_password">

        <!--<action
            android:id="@+id/action_settingFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/settingFragment"
            app:popUpToInclusive="true" />-->

    </fragment>

    <fragment
        android:id="@+id/messengerFragment"
        android:name="com.dabenxiang.mimi.view.messenger.MessengerFragment"
        tools:layout="@layout/fragment_messenger" />

</navigation>