<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="7.5dp" />
            <padding
                    android:bottom="2dp"
                    android:left="2dp"
                    android:right="2dp"
                    android:top="2dp" />
            <solid android:color="@color/color_black_1_50" />

        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="7.5dp" />
                <solid android:color="@color/color_blue_1" />
                <padding
                        android:bottom="2dp"
                        android:left="2dp"
                        android:right="2dp"
                        android:top="2dp" />
            </shape>
        </clip>
    </item>
</layer-list>