<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white_1">

    <ImageView
        android:id="@+id/iv_create_order_waiting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:src="@drawable/ico_work"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_count_down_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/order_result_create_order_waiting"
        android:textColor="@color/color_black_1"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@+id/iv_create_order_waiting"
        app:layout_constraintRight_toRightOf="@+id/iv_create_order_waiting"
        app:layout_constraintTop_toBottomOf="@+id/iv_create_order_waiting" />

</androidx.constraintlayout.widget.ConstraintLayout>