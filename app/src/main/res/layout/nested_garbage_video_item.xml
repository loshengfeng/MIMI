<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/layout_card"
        android:layout_width="155dp"
        android:layout_height="0dp"
        app:cardBackgroundColor="@color/item_color_card_background"
        app:cardCornerRadius="6dp"
        app:layout_constraintDimensionRatio="155:87"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:id="@+id/iv_poster"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/video_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/layout_card"
        app:layout_constraintTop_toTopOf="@+id/layout_card" />

    <com.dabenxiang.mimi.view.customview.NestedHorizontalScrollView
        android:id="@+id/reflow_group_scroll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/layout_card"
        app:layout_constraintTop_toBottomOf="@id/video_title">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/tag_group"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:selectionRequired="true"
            app:singleLine="true"
            app:singleSelection="true" />
    </com.dabenxiang.mimi.view.customview.NestedHorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>