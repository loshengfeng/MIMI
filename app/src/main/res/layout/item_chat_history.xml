<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/btnChatHistory"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:background="@drawable/btn_chat_history_new">

    <ImageView
        android:id="@+id/imgChatPhoto"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/icon_cs_photo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imgIsNew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ico_new_chat"
        android:layout_marginBottom="29dp"
        android:layout_marginStart="29dp"
        app:layout_constraintStart_toStartOf="@id/imgChatPhoto"
        app:layout_constraintBottom_toBottomOf="@id/imgChatPhoto" />

    <TextView
        android:id="@+id/textName"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:textSize="14sp"
        android:textColor="@color/color_black_1"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        app:layout_constraintEnd_toStartOf="@id/textDate"
        app:layout_constraintTop_toTopOf="@id/imgChatPhoto"
        app:layout_constraintStart_toEndOf="@id/imgChatPhoto"
        tools:text="名称名称" />

    <TextView
        android:id="@+id/textContent"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:textSize="14sp"
        android:textColor="@color/color_black_1_50"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        app:layout_constraintTop_toBottomOf="@id/textName"
        app:layout_constraintStart_toEndOf="@id/imgChatPhoto"
        app:layout_constraintEnd_toStartOf="@id/imgGo"
        tools:text="内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内" />

    <TextView
        android:id="@+id/textDate"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:textSize="14sp"
        android:textColor="@color/color_black_1_50"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toStartOf="@id/imgGo"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintTop_toTopOf="@id/imgChatPhoto"
        tools:text="2020-03-03" />

    <ImageView
        android:id="@+id/imgGo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_arrow_black_n"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/color_black_1_05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>