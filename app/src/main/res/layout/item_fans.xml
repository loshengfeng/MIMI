<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/icon_fans"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/name_fans"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        tools:text="加下下嚇嚇"
         android:textSize="14sp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        app:layout_constraintStart_toEndOf="@+id/icon_fans"
        app:layout_constraintTop_toTopOf="@+id/icon_fans" />

    <TextView
        android:id="@+id/decs_fans"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:textSize="10sp"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="@+id/name_fans"
        app:layout_constraintTop_toBottomOf="@+id/name_fans"
        tools:text="嚇嚇叫!!!!!!!!" />

    <TextView
        android:id="@+id/follow_fnas"
        android:layout_width="54dp"
        android:layout_height="24dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:text="@string/follow"
        android:textSize="12sp"
        android:background="@drawable/bg_follow_fnas"
        app:layout_constraintBottom_toBottomOf="@+id/icon_fans"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/icon_fans" />
</androidx.constraintlayout.widget.ConstraintLayout>