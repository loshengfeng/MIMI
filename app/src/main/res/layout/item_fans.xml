<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/icon_fans"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/name_fans"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textColor="@color/color_black_1"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@id/follow_fans"
        app:layout_constraintStart_toEndOf="@+id/icon_fans"
        app:layout_constraintTop_toTopOf="@+id/icon_fans"
        tools:text="加下下嚇嚇" />

    <TextView
        android:id="@+id/decs_fans"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="2dp"
        android:textColor="@color/color_black_1_50"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@id/name_fans"
        app:layout_constraintStart_toStartOf="@+id/name_fans"
        app:layout_constraintTop_toBottomOf="@+id/name_fans"
        android:maxLines="2"
        android:ellipsize="end"
        tools:text="嚇嚇叫!!!!!!!!" />

    <TextView
        android:id="@+id/follow_fans"
        android:layout_width="54dp"
        android:layout_height="24dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/bg_follow_fans"
        android:gravity="center"
        android:text="@string/follow"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/icon_fans"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/icon_fans" />

    <View
        android:id="@+id/view_line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="15dp"
        android:background="@color/color_black_1_05"
        app:layout_constraintEnd_toEndOf="@id/follow_fans"
        app:layout_constraintStart_toStartOf="@id/decs_fans"
        app:layout_constraintTop_toBottomOf="@id/decs_fans"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>