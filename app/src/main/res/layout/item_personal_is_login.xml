<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/color_white_1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_favorite"
        style="@style/personalStyle"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="@string/favorite_title"
        android:textColor="@color/color_black_1"
        android:textSize="14sp"
        app:drawableEndCompat="@drawable/btn_arrow_black_n"
        app:drawableStartCompat="@drawable/btn_favorite_n"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="@id/tv_favorite"
        app:layout_constraintStart_toStartOf="@id/tv_favorite"
        app:layout_constraintTop_toBottomOf="@id/tv_favorite" />

    <TextView
        android:id="@+id/tv_topup_history"
        style="@style/personalStyle"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="@string/personal_order"
        app:drawableEndCompat="@drawable/btn_arrow_black_n"
        app:drawableStartCompat="@drawable/btn_note_n"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_favorite" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_topup_history" />

    <ImageView
        android:id="@+id/iv_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="46dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_topup_history"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_follow" />

    <TextView
        android:id="@+id/tv_new"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="46dp"
        android:gravity="center"
        android:text="N"
        android:textColor="@color/color_white_1"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_topup_history"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_follow" />

    <TextView
        android:id="@+id/tv_my_post"
        style="@style/personalStyle"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="@string/personal_my_post"
        app:drawableEndCompat="@drawable/btn_arrow_black_n"
        app:drawableStartCompat="@drawable/ico_myposts"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_topup_history" />
<!--               app:layout_constraintTop_toBottomOf="@id/tv_chat_history"-->

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_my_post" />

    <TextView
        android:id="@+id/tv_exchange"
        style="@style/personalStyle"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="@string/exchange"
        app:drawableEndCompat="@drawable/btn_arrow_black_n"
        app:drawableStartCompat="@drawable/ico_coupon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_my_post" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_exchange" />

</androidx.constraintlayout.widget.ConstraintLayout>