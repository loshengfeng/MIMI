<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/configLayout"
        android:layout_width="0dp"
        android:layout_height="86dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/bg_personal_config"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/ivPhoto"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="18dp"
            android:background="@drawable/ico_default_photo"
            android:contentDescription="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textColor="@color/color_white_1"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/ivPhoto"
            app:layout_constraintTop_toTopOf="@id/ivPhoto"
            tools:text="好大一棵洋梨" />

        <TextView
            android:id="@+id/tvCoco"
            android:layout_width="52dp"
            android:layout_height="20dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/bg_coin"
            android:drawableStart="@drawable/ic_ico_micoin_small"
            android:drawablePadding="2dp"
            android:paddingStart="4dp"
            android:textColor="@color/color_white_1"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/tvName"
            app:layout_constraintTop_toBottomOf="@id/tvName"
            tools:ignore="RtlSymmetry"
            tools:text="200" />

        <TextView
            android:id="@+id/btnTopup"
            android:layout_width="86dp"
            android:layout_height="33dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/bg_white_radius_6"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/personal_topup"
            android:textColor="@color/color_red_6"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:id="@+id/svContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="21dp"
        android:background="@color/color_white_1"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/configLayout">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/btnPhoto"
                style="@style/personalStyle"
                android:drawableStart="@drawable/btn_favorite_n"
                android:drawableEnd="@drawable/ic_btn_arrow_black_n"
                android:gravity="center_vertical"
                android:text="@string/personal_favorite"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/color_gray_3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnPhoto" />

            <TextView
                android:id="@+id/btnRaw1"
                style="@style/personalStyle"
                android:drawableStart="@drawable/ic_btn_note_n"
                android:drawableEnd="@drawable/ic_btn_arrow_black_n"
                android:gravity="center_vertical"
                android:text="@string/personal_topoup_history"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnPhoto" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/color_gray_3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnRaw1" />

            <TextView
                android:id="@+id/btnEmail"
                style="@style/personalStyle"
                android:drawableStart="@drawable/ic_ico_messenger_gray"
                android:drawableEnd="@drawable/ic_btn_arrow_black_n"
                android:gravity="center_vertical"
                android:text="@string/personal_chat_history"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnRaw1" />

            <TextView
                android:id="@+id/tvNew"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="26dp"
                android:background="@drawable/ic_ico_new"
                android:gravity="center"
                android:textColor="@color/color_white_1"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="@id/btnEmail"
                app:layout_constraintEnd_toEndOf="@id/btnEmail"
                app:layout_constraintTop_toTopOf="@id/btnEmail"
                tools:text="N" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/color_gray_3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnEmail" />

            <TextView
                android:id="@+id/btnRaw2"
                style="@style/personalStyle"
                android:drawableStart="@drawable/ic_ico_setting"
                android:drawableEnd="@drawable/ic_btn_arrow_black_n"
                android:gravity="center_vertical"
                android:text="@string/personal_setting"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnEmail" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <TextView
        android:id="@+id/btnLogout"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="19dp"
        android:background="@color/color_white_1"
        android:gravity="center"
        android:text="@string/btn_logout"
        android:textColor="@color/color_red_1"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/svContent" />

</androidx.constraintlayout.widget.ConstraintLayout>