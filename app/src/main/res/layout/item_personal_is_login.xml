<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gray_2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_config"
        android:layout_width="0dp"
        android:layout_height="86dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/bg_personal_config"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="18dp"
            android:src="@drawable/ico_default_photo"
            android:contentDescription="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textColor="@color/color_white_1"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/iv_photo"
            app:layout_constraintTop_toTopOf="@id/iv_photo"
            tools:text="好大一棵洋梨" />

        <TextView
            android:id="@+id/tv_coco"
            android:layout_width="52dp"
            android:layout_height="20dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/bg_coin"
            android:drawableStart="@drawable/ic_ico_micoin_small"
            android:drawablePadding="2dp"
            android:paddingStart="4dp"
            android:textColor="@color/color_white_1"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/tv_name"
            app:layout_constraintTop_toBottomOf="@id/tv_name"
            tools:ignore="RtlSymmetry"
            tools:text="200" />

        <TextView
            android:id="@+id/tv_topup"
            android:layout_width="86dp"
            android:layout_height="33dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/bg_white_radius_6"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/personal_topup"
            android:textColor="@color/color_red_6"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_gray_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_config">

        <TextView
            android:id="@+id/tv_favorite"
            style="@style/personalStyle"
            android:drawableStart="@drawable/btn_favorite_n"
            android:drawableEnd="@drawable/ic_btn_arrow_black_n"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="@string/favorite_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/color_gray_3"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_favorite" />

        <TextView
            android:id="@+id/tv_topup_history"
            style="@style/personalStyle"
            android:drawableStart="@drawable/ic_btn_note_n"
            android:drawableEnd="@drawable/ic_btn_arrow_black_n"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="@string/personal_topoup_history"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_favorite" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/color_gray_3"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_topup_history" />

        <TextView
            android:id="@+id/tv_chat_history"
            style="@style/personalStyle"
            android:drawableStart="@drawable/ic_ico_messenger_gray"
            android:drawableEnd="@drawable/ic_btn_arrow_black_n"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="@string/personal_chat_history"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_topup_history" />

        <TextView
            android:id="@+id/tv_new"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="46dp"
            android:background="@drawable/ic_ico_new"
            android:gravity="center"
            android:textColor="@color/color_white_1"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@id/tv_chat_history"
            app:layout_constraintEnd_toEndOf="@id/tv_chat_history"
            app:layout_constraintTop_toTopOf="@id/tv_chat_history"
            tools:text="N" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/color_gray_3"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_chat_history" />

        <TextView
            android:id="@+id/tv_setting"
            style="@style/personalStyle"
            android:drawableStart="@drawable/ic_ico_setting"
            android:drawableEnd="@drawable/ic_btn_arrow_black_n"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="@string/personal_setting"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_chat_history" />

        <TextView
            android:id="@+id/tv_logout"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="19dp"
            android:background="@color/color_white_1"
            android:gravity="center"
            android:text="@string/btn_logout"
            android:textColor="@color/color_red_1"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_setting" />

        <TextView
            android:id="@+id/tv_version_is_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:textColor="@color/color_black_1_30"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_logout"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="v1.0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>