<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="30dp"
        android:paddingTop="50dp"
        android:paddingEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/edtName"
            style="@style/login_edit_text"
            android:layout_height="wrap_content"
            android:width="0dp"
            android:hint="@string/login_name"
            android:importantForAutofill="no"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <EditText
            android:id="@+id/edtPw"
            style="@style/login_edit_text"
            android:layout_height="wrap_content"
            android:width="0dp"
            android:importantForAutofill="no"
            android:labelFor="@id/edtPw"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtName" />

        <CheckBox
            android:id="@+id/cbShowPw"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/ico_eye_selector"
            android:button="@null"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/edtPw"
            app:layout_constraintEnd_toEndOf="@id/edtPw"
            app:layout_constraintTop_toTopOf="@id/edtPw"
            tools:checked="true"
            tools:visibility="visible" />

        <CheckBox
            android:id="@+id/cbKeepAcc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:background="@drawable/btn_checkbox_selector"
            android:button="@null"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edtPw"
            tools:checked="true" />

        <TextView
            android:id="@+id/btn_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/login_keep_account"
            android:textColor="@color/color_black_1"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/cbKeepAcc"
            app:layout_constraintStart_toEndOf="@id/cbKeepAcc"
            app:layout_constraintTop_toTopOf="@id/cbKeepAcc"
            tools:checked="true" />

        <TextView
            android:id="@+id/tvForget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:text="@string/login_forget"
            android:textColor="@color/color_red_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edtPw" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="76dp"
            android:layout_height="33dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg_cancel"
            android:text="@string/btn_close"
            android:textColor="@color/color_black_1_50"
            app:layout_constraintEnd_toStartOf="@id/btnLogin"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cbKeepAcc" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="76dp"
            android:layout_height="33dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg_register"
            android:text="@string/login"
            android:textColor="@color/color_white_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnCancel"
            app:layout_constraintTop_toBottomOf="@id/cbKeepAcc" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>